package tiers;

import lethalCompany.Component;
import lethalCompany.LethalCompany;

public class ProTier extends LethalCompany{

	public Component createComponent(String type) {
		// TODO Auto-generated method stub
		Component component = null;
		if("Flashlight".equals(type)) {
			component = new LethalFlashlight();
		}
		else if("Weapon".equals(type)) {
			component = new LethalWeapon();
		}
		else if("WalkieTalkie".equals(type)){
			component = new LethalWalkieTalkie();
		}
		else {
			System.out.println("ERROR!");
		}
		return component;
	}

}
