public class ShopWindow {

	private JFrame frame;
	protected int dimensiuneFereastra =200;
	protected int[] ratie= {4,3};
	protected Color screenColor = new Color(0x051005);//0x050705
	protected ImageIcon borderImage;
	private JTextField txtLogIn;
	private JTextField usernameField;
	private JPasswordField passwordField;
	private JTextField txtUsername;
	private JTextField txtPassword;
	private JTextArea textArea;
	private JPanel panel;
	
	private String username =new String("admin");
	private String password =new String("admin");
	
	
	private KeyListener EnterSetup = new KeyListener() {

		@Override
		public void keyTyped(KeyEvent e) {
			// TODO Auto-generated method stub
		}

		@Override
		public void keyPressed(KeyEvent e) {
			// TODO Auto-generated method stub
			if(panel.isVisible()) {
				if (e.getKeyCode() == KeyEvent.VK_ENTER) {
					verifyAdminAccount();
				}
			}
		}

		@Override
		public void keyReleased(KeyEvent e) {
			// TODO Auto-generated method stub
			if(textArea.isVisible()) {
            if (e.getKeyCode() == KeyEvent.VK_ENTER) {
                textArea.setText(null);
             }
			}
		}};
	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ShopWindow window = new ShopWindow();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}
	
	void verifyAdminAccount() {
		String getUsername = usernameField.getText();
		char[] getPassword = passwordField.getPassword();
		System.out.println(getUsername+" "+getPassword.toString());
		boolean usr = getUsername.equals(username);
		boolean psw = getPassword.equals(password.toCharArray());
		System.out.println(usr+" "+psw);
		if(usr && psw) {
			panel.setVisible(false);
			textArea.setVisible(true);
		}
	}
	void setTxtArea() {

        double percentageDistance = 0.15;
        int textAreaWidth = (int) (frame.getWidth() * (1 - 2 * percentageDistance));
        int textAreaHeight = (int) (frame.getHeight() * (1 - 2 * percentageDistance));
        int textAreaX = (int)(frame.getWidth() * percentageDistance);
        int textAreaY = (int)(frame.getHeight() * percentageDistance);
        textArea = new JTextArea();
        textArea.setVisible(false);
        textArea.setForeground(new Color(0, 255, 0));
		textArea.setBounds(textAreaX, textAreaY, textAreaWidth ,textAreaHeight);
		textArea.setFont(new Font("NewTimesRoman", Font.BOLD, 30));
		textArea.setBackground(screenColor);
		textArea.setLineWrap(true); 
	    textArea.setWrapStyleWord(true);
	    textArea.addKeyListener(EnterSetup);
	    frame.getContentPane().add(textArea);
	}
	void setLoginPanel() {
		
		JLabel lblNewLabel = new JLabel("New label");
		lblNewLabel.setBounds(0, 10, 677, 422);
		frame.getContentPane().add(lblNewLabel);
		lblNewLabel.setVerticalAlignment(SwingConstants.TOP);
		lblNewLabel.setIcon(borderImage);
		
		panel = new JPanel();
		panel.setBackground(new Color(5, 16, 5));
		panel.setBounds(152, 109, 317, 208);
		frame.getContentPane().add(panel);
		panel.setLayout(null);
		
		txtLogIn = new JTextField();
		txtLogIn.setBorder(null);
		txtLogIn.setHorizontalAlignment(SwingConstants.CENTER);
		txtLogIn.setText("Log In");
		txtLogIn.setForeground(new Color(0, 255, 0));
		txtLogIn.setFont(new Font("Monospaced", Font.BOLD, 30));
		txtLogIn.setBackground(new Color(5, 16, 5));
		txtLogIn.setBounds(61, 37, 165, 46);
		panel.add(txtLogIn);
		txtLogIn.setColumns(10);
		
		usernameField = new JTextField();
		usernameField.addKeyListener(EnterSetup);
		usernameField.setBorder(null);
		usernameField.setForeground(new Color(0, 255, 0));
		usernameField.setFont(new Font("Monospaced", Font.PLAIN, 10));
		usernameField.setBackground(new Color(5, 16, 5));
		usernameField.setBounds(151, 93, 101, 19);
		panel.add(usernameField);
		usernameField.setColumns(10);
		
		passwordField = new JPasswordField();
		passwordField.addKeyListener(EnterSetup);
		passwordField.setForeground(new Color(0, 255, 0));
		passwordField.setBorder(null);
		passwordField.setFont(new Font("Monospaced", Font.PLAIN, 10));
		passwordField.setBounds(151, 122, 101, 19);
		panel.add(passwordField);
		passwordField.setBackground(new Color(5, 16, 5));
		
		txtUsername = new JTextField();
		txtUsername.setBorder(null);
		txtUsername.setText("Username:");
		txtUsername.setHorizontalAlignment(SwingConstants.RIGHT);
		txtUsername.setForeground(Color.GREEN);
		txtUsername.setFont(new Font("Monospaced", Font.BOLD, 10));
		txtUsername.setColumns(10);
		txtUsername.setBackground(new Color(5, 16, 5));
		txtUsername.setBounds(34, 93, 107, 20);
		panel.add(txtUsername);
		
		txtPassword = new JTextField();
		txtPassword.setBorder(null);
		txtPassword.setText("Password:");
		txtPassword.setHorizontalAlignment(SwingConstants.RIGHT);
		txtPassword.setForeground(Color.GREEN);
		txtPassword.setFont(new Font("Monospaced", Font.BOLD, 10));
		txtPassword.setColumns(10);
		txtPassword.setBackground(new Color(5, 16, 5));
		txtPassword.setBounds(34, 121, 107, 20);
		panel.add(txtPassword);
	}
	void setBorderImage() {
		Image originalImage = new ImageIcon(ShopWindow.class.getResource("/resorce/border.png")).getImage();
		int newWidth = frame.getWidth()-10;
        int newHeight = frame.getHeight()-40;
        Image scaledImage = originalImage.getScaledInstance(newWidth, newHeight, Image.SCALE_SMOOTH);
        borderImage= new ImageIcon(scaledImage);
        frame.getContentPane().setLayout(null);
	}
	/**
	 * Create the application.
	 */
	public ShopWindow() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setResizable(false);
		frame.setBounds(0, 0, 638, 462);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		frame.getContentPane().setBackground(screenColor);
		
		setBorderImage();
		setLoginPanel();
		setTxtArea();
		
		frame.revalidate();
	}
}
